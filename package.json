{
  "name": "root",
  "private": true,
  "license": "MIT",
  "packageManager": "yarn@4.1.0",
  "engines": {
    "node": ">=18"
  },
  "workspaces": [
    "app",
    "libs/*"
  ],
  "scripts": {
    "sdk:generate": "yarn workspace @exchange/sdk generate",
    "sdk:build": "yarn workspace @exchange/sdk build",
    "core:generate": "yarn workspace @exchange/sdk-core generate",
    "core:build": "yarn workspace @exchange/sdk-core build",
    "diamond:generate": "yarn workspace @exchange/sdk-diamond generate",
    "diamond:build": "yarn workspace @exchange/sdk-diamond build",
    "all:generate": "yarn core:generate && yarn diamond:generate && yarn sdk:generate",
    "all:build": "yarn core:build && yarn diamond:build && yarn sdk:build",
    "generate": "yarn all:generate",
    "build": "yarn generate && yarn all:build",
    "app:build": "yarn workspace dex-app build",
    "app:dev": "yarn workspace dex-app dev",
    "format:prettier": "prettier --write \"**/*.{ts,tsx,json}\""
  },
  "devDependencies": {
    "@types/prettier": "^2.7.3",
    "husky": "8.0.3",
    "jest": "29.2.2",
    "jest-serial-runner": "1.2.1",
    "lint-staged": "13.3.0",
    "prettier": "3.3.3",
    "ts-jest": "29.1.2",
    "ts-node": "10.9.2",
    "typescript": "5.3.3"
  }
}
